        </view>
      </view>
      <view class="text-content" data-id="{{item.id}}" bindtap='clickContent'>
        {{item.content}}
      </view>
      <view class="grid flex-sub padding-lr col-3 grid-square" data-id="{{item.id}}" bindtap='clickContent'>
