/* pages/mine/index.wxss */



.aon{
position: absolute;
white-space:nowrap;/* 防止向下换行*/
animation-timing-function: linear;
animation-fill-mode: none;
}
.doommview{
  z-index: 3;
  height: 20%;
  width: 100%;
  top: 100rpx;
  position: absolute;
}

@keyframes first{
  from{left: 100%; }
  to{left: -100%;}
}

.user-bg{
  background-image: url(https://image.weilanwl.com/color2.0/plugin/qpct2148.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.user-bg .avatar{
  position: relative;
  top: 400rpx;
  left: -270rpx;
}

.user-bg .cu-tag{
  margin: 0;
}

.user-bg .nickname{
  position: relative;
  top: 300rpx;
  left: -10rpx;
  font-size: 36rpx;
  font-weight: 2.5;
}

.user-bg .major{
  position: relative;
  top: 340rpx;
  left: -90rpx;
  font-size: 24rpx;
}

.user-bg .cuIcon-back{
  position: relative;
  top: -125rpx;
  left: -340rpx;
  /* font-size: 36rpx; */
  font-weight: 2.5;
}

.cu-list.grid>.cu-item [class*=cuIcon]{
  margin-top: 0;
}



.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg .head{
  width:220rpx;
  height: 220rpx;
  border-radius: 50%;
  margin-bottom: 45rpx;
}

.UCenter-bg image {
  width:350rpx;
  height: 350rpx;

}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
.content{
  flex: 1
}
