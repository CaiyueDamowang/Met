<!--pages/mine/user/info.wxml-->
<scroll-view scroll-y class="">
  <view class="UCenter-bg">
    <image src="{{avatar}}"  class="avatar {{nav_obj.beforeScrollCss}}" mode="widthFix"></image>
    <view class="text-xl">{{nickname}}</view>
    <image src="https://image.weilanwl.com/gif/wave.gif" mode="scaleToFill" class="gif-wave"></image>
  </view>
  <view class="flex text-center text-grey bg-white shadow-warp wave">
    <view class="flex flex-sub flex-direction ">
      <view class="margin-top-sm {{index == 0 ? checked : unchecked}}" bindtap='tapchange' data-id='0'>
        <text class="cuIcon-camerafill"></text>个人信息</view>
    </view>
     <view class="flex flex-sub flex-direction">
      <view class="margin-top-sm {{index == 1 ? checked : unchecked}}" bindtap='tapchange' data-id='1'>
        <text class="cuIcon-friendfill"></text> 动态圈</view>
    </view> 
  </view>
  </scroll-view>
  <swiper-item id="swiper">
    <scroll-view class='info_wrapper scroll_left {{index==0?scroll_right:scroll_left}}'>
      <view class='float'>
        <!-- 左边的页面 -->
          <view class="cu-form-group">
          <!-- 个签 -->
            <view class='title'>个性签名</view>
              {{profile}}</view>
          <!-- 专业 -->
          <view class="cu-form-group">
            <view class='title'> <view>学校专业</view></view><view>{{major}}</view>
          </view>
          <view class="text-center cu-form-group">	      
            <!-- 标签云 -->
            <view class=' content'>
              <block wx:for="{{labArr}}" wx:key="key" wx:for-index="key" wx:for-item="v">
                <view class=' cu-tag  padding radius text-center shadow-blur' data-key="{{key}}" style="opacity:{{randomOpacity[key]}};; background-color:{{randomColorArr[key]}}">{{v}}</view>
              </block>
            </view>
          </view>

            <view class='text-center bg-orange'>TA的问题</view>

          <!-- 问题1 -->
          <view wx:for="{{questions}}" >
            <view class='cu-form-group' >{{item}}</view>
            <view class='cu-form-group'>
            <input  placeholder='你的答案'></input>
            </view>
          </view>
          
          <!-- 问题2 -->

          <view class="padding flex flex-direction bg-white ">
            <button class="cu-btn bg-red margin-tb-sm lg">提交</button>
          </view>

      </view>
      <view class='float'>
        <!-- 右边的页面 -->
          <view class='dynamic'>
              
          </view>
      </view>
    </scroll-view>
  </swiper-item>
