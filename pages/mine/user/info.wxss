/* pages/mine/user/info.wxss */


@import "../../../modules/dynamic/dynamic.wxss";
page{
  height: 100%;
}



.aon{
position: absolute;
white-space:nowrap;/* 防止向下换行*/
animation-timing-function: linear;
animation-fill-mode: none;
}
.doommview{
  z-index: 3;
  height: 20%;
  width: 100%;
  top: 100rpx;
  position: absolute;
}

@keyframes first{
  from{left: 100%; }
  to{left: -100%;}
}

.user-bg{
  background-image: url(https://image.weilanwl.com/color2.0/plugin/qpct2148.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.user-bg .avatar{
  position: relative;
  top: 400rpx;
  left: -270rpx;
}

.user-bg .cu-tag{
  margin: 0;
}

.user-bg .nickname{
