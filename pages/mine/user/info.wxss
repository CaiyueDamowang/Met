  top: 250rpx;
  left: -10rpx;
  font-size: 36rpx;
  font-weight: 2.5;
}

.user-bg .major{
  position: relative;
  top: 300rpx;
  left: -90rpx;
  font-size: 24rpx;
}

.user-bg .cuIcon-back{
  position: relative;
  top: -125rpx;
  left: -300rpx;
  /* font-size: 36rpx; */
  font-weight: 2.5;
}


.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
