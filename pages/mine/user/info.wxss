/* pages/mine/user/info.wxss */
.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 350rpx;
  height: 350rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.margin-top-sm{
  padding: 5rpx;
  transition:  ease 0.2s;

  height: 60rpx;
  line-height: 60rpx;
}
.float{
  width: 100vw;
  float: left;
}
.info_wrapper{
  transition: 0.3s;
  width: 200vw;

  position: relative;
}
.scroll_left{
  left: -100vw;
}
.scroll_right{
  left: 0;
}
.text-center{
  text-align: center;

}
.hoby{
  margin-top: 20rpx;
  height: 80rpx;
  width: 300rpx;
  margin: 0 auto;
}
.content{ width: 100%; height: auto; overflow: hidden; margin: 50rpx auto;}
.cu-tag{ padding: 4rpx 10rpx; margin: 20rpx; border-radius: 4rpx; float: left; color: #fff; font-size: 28rpx;
}
#swiper{
  height: 80%;
}
