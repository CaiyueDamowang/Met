/* pages/dynamic/index.wxss */
/* 列表 */
.cu-item{
  width: 100%;
  padding-right: 30rpx;
}

form{
  width: 100%;
}
.comment{
  display: flex;
  width: 100%;
}
.good_cell, .good_swiper, .good_cmt {
  padding: 15 15rpx;
  display: flex;
}

.good_cmt {
  padding: 20rpx 10rpx;
  align-items: flex-start;
  background: #fff;
}

.good_cell {
  padding: 15rpx 0;
  align-items: center;
  background-color: #fff;
}

.good_swiper {
  align-items: center;
  background: black;
}

.bottom_line {
  border-bottom: 1px solid rgb(226, 226, 226);
}

.cell_flex {
  flex: 1;
  display: flex;
  align-items: center;
}

.cell_text {
  font-size: 12px;
  color: #b2b2b2;
}

.item_price {
  font-size: 14px;
  display: inline-block;
  font-weight: bold;
  color: #ff4f64;
}

.item_price_before {
  display: inline-block;
  font-size: 12px;
  text-decoration: line-through;
  color: #b2b2b2;
}

/*自定义轮播图dot*/


.user_avatar {
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin: 0 15rpx 0 0;
  border-radius: 50%;
  border: 1px solid rgb(178, 178, 178);
}

.user_nickname {
  display: inline-block;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.user_location {
  display: inline-block;
  color: #e74552;
}

.comment_in_wrap {
  height: 70rpx;
  width: 475rpx;
  border-bottom-left-radius: 20px;
  border-top-left-radius: 20px;
  background-color: #ddd;
  display: flex;
  flex: 1;
}

.comment_in {
  flex: 1;
  width: 475rpx;
  height: 70rpx;
  font-size: 13px;
  margin: 0 25rpx;
  background-color: #ddd;

}
.input{
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  margin:0;
  flex: 1;
  padding-left: 20rpx;
}
.comment_btn_wrap {
  height: 70rpx;
  width: 150rpx;
  border-bottom-right-radius: 20px;
  border-top-right-radius: 20px;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  border: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  flex: 1;
  color: #fff;
  font-size: 13px;
  
}

/*底部导航*/

.bottom_tab_wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  background-color: #fff;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
  z-index: 999;
  bottom: 0;
  height: 98rpx;
  width: 100%;
}

.bottom_tab {
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  height: 100%;
  color: rgb(136, 136, 136);
}

.tab_icon {
  width: 56rpx;
  height: 56rpx;
}

.text-wrap {
  width: 56rpx;
  height: 56rpx;
}

