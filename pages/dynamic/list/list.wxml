<import src="../../../modules/dynamic/dynamic.wxml" />
<cu-custom bgColor="bg-gradual-orange">
  <view slot="content">动态</view>
</cu-custom>
<scroll-view scroll-x class="bg-gradual-orange nav text-center" >
  <view class="cu-item {{0==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="0">
    <text class="cuIcon-hotfill"></text> 推荐
  </view>
  <view class="cu-item {{1==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="1">
    <text class="cuIcon-attentionfill"></text> 关注
  </view>
  <view class="cu-item {{2==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="2">
    <text class="cuIcon-evaluate_fill"></text> 表白墙
  </view>
  <view class="cu-item {{3==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="3">
    <text class="cuIcon-creativefill"></text> 约学习
  </view>
   <view class="cu-item {{4==TabCur?'text-white cur':''}}" bindtap="tabSelect" data-id="4">
    <text class="cuIcon-creativefill"></text> 拼车
  </view>

</scroll-view>
<view class='round more' bindtap='addDynamic' ></view>
<swiper  style="height: {{clientHeight?clientHeight+'px':'auto'}}" class='videoSwiper'                  current="{{TabCur}}" 
         duration="200" bindchange="swiperchange">
  <swiper-item>
    <scroll-view scroll-y="{{true}}" 
      style="height: {{clientHeight?clientHeight+'px':'auto'}}"
      bindscroll="scrollbot" >
      <view 
        bindtouchstart="mytouchstart"
        bindtouchend="mytouchend"
        bindscrolltoupper="refresh"
        wx:key="{{index}}" wx:for="{{dynamics}}" >
        <view data-item="{{item}}">
          <template is="dynamic" data="{{...item}}"></template>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
  <!-- 关注页面 -->
  <swiper-item>
    <scroll-view 
        bindtouchstart="mytouchstart"
        bindtouchend="mytouchend"
        bindscrolltoupper="refresh"
        scroll-y="{{true}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}"                  bindscroll="scrollbot">
      <view
       bindscrolltoupper="refresh" 
       wx:key="{{index}}" wx:for="{{followDynamic}}" wx:key="item">
        <view data-item="{{item}}">
          <template is="dynamic" data="{{...item}}"></template>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item>
    <scroll-view 
        bindtouchstart="mytouchstart"
        bindtouchend="mytouchend"
        bindscrolltoupper="refresh"
        scroll-y="{{true}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}"                  bindscroll="scrollbot">
      <view 
       bindscrolltoupper="refresh" wx:for="{{expressDynamic}}" wx:key="{{index}}">
        <view>
          <template is="dynamic" data="{{...item}}"></template>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item>
    <scroll-view 
        bindtouchstart="mytouchstart"
        bindtouchend="mytouchend"
        bindscrolltoupper="refresh"
        scroll-y="{{true}}" style="height: {{clientHeight?clientHeight+'px':'auto'}}"                  bindscroll="scrollbot">
      <view 
       bindscrolltoupper="refresh" wx:for="{{talkDynamic}}" wx:key="{{index}}">
        <view data-item="{{item}}">
          <template is="dynamic" data="{{...item}}"></template>
        </view>
      </view>
    </scroll-view>
  </swiper-item>
  <!-- //拼车 -->
  <swiper-item>
      <view 
       bindscrolltoupper="refresh" wx:for="{{talkDynamic}}" wx:key="{{index}}">
        <view data-item="{{item}}">
          <template is="dynamic" data="{{...item}}"></template>
        </view>
      </view>
  </swiper-item>
</swiper>